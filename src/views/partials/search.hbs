<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Name</h2>

        <form class="search-wrapper cf" method="GET" action="/stones/search">
            <input id="search-input" type="text" name="name" placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>

        {{#if results.length}}
        <div id="search-container">
            <ul class="card-wrapper">
                {{#each results}}
                <!-- Display a li with information about every result (if any)-->
                <li class="card">
                    <img src="{{this.image}}" />
                    <p>
                        <strong>Name: </strong><span class="name">{{this.name}}</span>
                    </p>
                    <p>
                        <strong>Category: </strong><span class="category">{{this.category}}</span>
                    </p>
                    <p><strong>Formula:</strong><span class="formula">{{this.formula}}</span></p>
                    <a class="details-btn" href="/stones/{{this._id}}/details">Details</a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{else}}
        <!-- Display an h2 if there are no results -->
        <div id="no-post">
            <h2>There are no results found.</h2>
        </div>
        {{/if}}
    </section>
</main>